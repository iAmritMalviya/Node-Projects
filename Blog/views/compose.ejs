<%- include('partials/header.ejs') %>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="postTitle" id="title" placeholder="Enter Your Title Here...">
            </div>
            <div class="mb-3">
                <label for="Post" class="form-label">Post</label>
                <textarea class="form-control" id="Post" name="postContent" rows="3"></textarea>
            </div>
        </div>

        <button class="btn btn-primary my-3" type="submit">Publish</button>


    </form>



    <%- include('partials/footer') %>